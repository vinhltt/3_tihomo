{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "CoreFinanceDb": "Host=localhost;Database=corefinance;Username=corefinance_user;Password=corefinance_pass;Port=5432"
  },
  "CorsOptions": {
    "PolicyName": "",
    "AllowedOrigins": [
      "*"
    ],
    "AllowedMethods": [
      "*"
    ],
    "AllowedHeaders": [
      "*"
    ],
    "ExposedHeaders": [
      "Token-Expired"
    ],
    "PreflightMaxAgeInMinutes": 10
  },
  "DbSettingOptions": {
    "EnableDetailedErrors": true,
    "EnableSensitiveDataLogging": true
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Username": "tihomo",
    "Password": "tihomo123"
  },
  "Serilog": {
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Error",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Verbose"
      }
    },
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Verbose",
          "outputTemplate": "[{Timestamp:u}] [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/Log-.json",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [
            {
              "key": "service",
              "value": "corefinance-api"
            },
            {
              "key": "environment",
              "value": "development"
            }
          ],
          "propertiesAsLabels": [
            "CorrelationId",
            "MessageType",
            "ConsumerType"
          ],
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  }
}