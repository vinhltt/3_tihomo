{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "CoreFinanceDb": ""
  },
  "Serilog": {
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Error",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Verbose"
      }
    },
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Verbose",
          "outputTemplate": "[{Timestamp:u}] [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://tihomo-loki:3100",
          "labels": [
            {
              "key": "service_name",
              "value": "CoreFinance"
            },
            {
              "key": "environment",
              "value": "Development"
            }
          ],
          "propertiesAsLabels": ["level"],
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  }
}
