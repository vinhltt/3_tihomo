{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Ocelot": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Issuer": "TiHoMo.Identity",
    "Audience": "TiHoMo.Gateway",
    "SecretKey": "ThisIsAVerySecretKeyForJWTTokenGenerationAndValidation123456789",
    "ExpirationMinutes": 60,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "ApiKeySettings": {
    "HeaderName": "X-API-Key",
    "ValidApiKeys": {
      "dev-key-123": "Development Client",
      "test-key-456": "Test Client",
      "prod-key-789": "Production Client"
    },
    "DefaultRateLimit": 1000
  },
  "CorsSettings": {
    "PolicyName": "AllowSpecificOrigins",
    "AllowedOrigins": [
      "http://localhost:3500",
      "https://localhost:3500",
      "http://localhost:8080",
      "https://localhost:8080"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "*" ],
    "AllowCredentials": true
  },
  "RateLimitSettings": {
    "EnableRateLimiting": true,
    "DefaultRule": {
      "Period": "1m",
      "PeriodTimespan": 60,
      "Limit": 100
    },
    "IpWhitelist": [ "127.0.0.1", "::1" ]
  },
  "ConsulSettings": {
    "Address": "http://localhost:8500",
    "PollingInterval": 30,
    "Enabled": false
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/gateway-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://tihomo-loki:3100",
          "labels": [
            {
              "key": "service_name",
              "value": "OcelotGateway"
            },
            {
              "key": "environment",
              "value": "Development"
            }
          ],
          "propertiesAsLabels": ["level"],
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  },
  "ServicePorts": {
    "CoreFinanceApiPort": 5004,
    "IdentitySsoPort": 5001,
    "MoneyManagementApiPort": 5002,
    "PlanningInvestmentApiPort": 5003,
    "ExcelApiPort": 5005,
    "GatewayPort": 5000
  }
}
