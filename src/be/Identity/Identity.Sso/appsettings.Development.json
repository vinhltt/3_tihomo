{
  "UseInMemoryDatabase": true,
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=db_identity;Username=postgres;Password=postgres"
  },
  "CorsOptions": {
    "PolicyName": "IdentityDevCorsPolicy",
    "AllowedOrigins": [
      "*"
    ],
    "AllowedMethods": [
      "*"
    ],
    "AllowedHeaders": [
      "*"
    ],
    "ExposedHeaders": [
      "*"
    ],
    "PreflightMaxAgeInMinutes": "60"
  },
  "Jwt": {
    "Issuer": "https://localhost:5001",
    "Audience": "tihomo-api-dev",
    "SecretKey": "ThisIsASecretKeyForJWTTokenGenerationAndShouldBeAtLeast32CharactersLong",
    "AccessTokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 7
  },
  "Google": {
    "ClientId": "your-dev-google-client-id.apps.googleusercontent.com",
    "ClientSecret": "your-dev-google-client-secret"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "DetailedErrors": true
}
