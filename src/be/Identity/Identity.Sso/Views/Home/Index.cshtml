@{
    ViewData["Title"] = "SSO Portal";
}

<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">Identity SSO Portal</h1>
                <p class="lead mb-4">Secure, centralized authentication for all your applications</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Dashboard" class="btn btn-light btn-lg me-3">
                        <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                    </a>
                }
                else
                {
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-light btn-lg me-3">
                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                    </a>
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-user-plus me-2"></i>Create Account
                    </a>
                }
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-shield-alt display-1 text-white-50"></i>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 4rem; height: 4rem;">
                        <i class="fas fa-lock text-white"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Secure Authentication</h4>
                    <p class="text-muted mb-0">Enterprise-grade security with multi-factor authentication and OAuth 2.0 compliance.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-success bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 4rem; height: 4rem;">
                        <i class="fas fa-network-wired text-white"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Single Sign-On</h4>
                    <p class="text-muted mb-0">Access all your applications with one set of credentials. No more password fatigue.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-info bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 4rem; height: 4rem;">
                        <i class="fas fa-users text-white"></i>
                    </div>
                    <h4 class="fw-bold mb-3">User Management</h4>
                    <p class="text-muted mb-0">Comprehensive user lifecycle management with role-based access control.</p>
                </div>
            </div>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="row mt-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h3 class="card-title mb-3">Welcome back, @User.Identity.Name!</h3>
                        <p class="text-muted mb-4">You are successfully authenticated. Access your dashboard or manage your account below.</p>
                        <div class="d-flex gap-3">
                            <a asp-action="Dashboard" class="btn btn-primary">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                            <a asp-action="Info" class="btn btn-outline-primary">
                                <i class="fas fa-user me-2"></i>Account Info
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mt-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm bg-light">
                    <div class="card-body p-4 text-center">
                        <h3 class="card-title mb-3">Ready to get started?</h3>
                        <p class="text-muted mb-4">Create your account or sign in to access all connected applications.</p>
                        <div class="d-flex gap-3 justify-content-center">
                            <a asp-controller="Auth" asp-action="Register" class="btn btn-success btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </a>
                            <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
